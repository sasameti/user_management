    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">

              <li class="nav-header"><i class="icon-user"></i> Profile</li>
              <li><a href="/user">My profile</a></li>
			  <li><a href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
        <div class="span9">
          <div class="well hero-unit">
            <h1 ><small>Welcome Admin</small></h1>
            <p>Here you can easily manage your users </p>
           <!-- <p><a class="btn btn-success btn-large" href="/Management/users">Manage Users &raquo;</a></p>-->
          </div>
          <div class="row-fluid">
           <!-- <div class="span3">
              <h3>Total Users</h3>
              <p><a href="/Management/users" class="badge badge-inverse">editable</a></p>
            </div>-->
            <!--<div class="span3">
              <h3>Pending</h3>
			  <p><a href="/Management/users" class="badge badge-inverse">2</a></p>
            </div>-->
          </div>
		  <br />
		  <div class="row-fluid">
			<div class="page-header">
				<h1>Manage Users </h1>
			</div>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>ID</th>
						<th>Username</th>
						<th>E-mail</th>
						<th>Access Level</th>
                        <th>Chanege Access Level</th>


					</tr>
				</thead>
				<tbody>
                {{#each in}}
				<tr class="pending-user">
					<td>{{this.id}}</td>
					<td>{{this.username}}</td>
					<td>{{this.email}}</td>
                    <td>{{this.Access}}</td>
					<td>
                        <form action="/Managment/changeaccess/{{this.id}}" method="post">
                            <input type="checkbox" name="change_access" value="admin"> Promote to  Admin
                            <input type="checkbox" name="change_access" value="user" > Make user
                            <input type="submit" class="btn btn-success btn-small" value="Submit">
                            <br>


                        </form>

                    </td>
				</tr>
                {{/each}}
				</tbody>
			</table>
		  </div>
        </div>
      </div>

      <hr>
